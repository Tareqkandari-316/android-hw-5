<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/jkl"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="93dp"
        android:layout_height="88dp"
        android:src="@drawable/pp"
        tools:ignore="ExtraText"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/Fill"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="50dp"
        android:background="#7E54938A"
        android:text="Fill in:"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:drawableStart="@drawable/ic_baseline_perm_identity_24"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="25dp"
        android:background="#39FFFFFF"
        android:ems="10"
        android:hint="Name:"
        android:inputType="textPersonName"
        android:textColorHint="#EC3D43"
        android:textSize="24sp" />

    <EditText

        android:id="@+id/Age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="25dp"
        android:background="#39FFFFFF"
        android:drawableStart="@drawable/ic_baseline_exposure_plus_1_24"
        android:ems="10"
        android:textColorHint="#EC3D43"
        android:hint="age:"
        android:textSize="24sp"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/Job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="25dp"
        android:textColorHint="#EC3D43"
        android:drawableStart="@drawable/ic_baseline_work_24"
        android:background="#39FFFFFF"
        android:textSize="24sp"
        android:ems="10"
        android:hint="@string/job"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/Num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="25dp"
        android:background="#39FFFFFF"
        android:drawableStart="@drawable/ic_baseline_call_24"
        android:textColorHint="#EC3D43"
        android:textSize="24sp"
        android:ems="10"
        android:hint="Number:"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="100dp"
        android:textColorHint="#EC3D43"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:background="#39FFFFFF"
        android:textSize="24sp"
        android:ems="10"
        android:hint="e-mail:"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/Next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="150dp"
        android:text="Next" />

</LinearLayout>